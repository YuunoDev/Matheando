<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/fondo2"
    android:id="@+id/main">

    <TextView
        android:id="@+id/textSeleccion"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Escoge la dificultad o repasa tus conocimientos"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPrimero"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="OPERACIONES"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/greenlime"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnSegundo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="SIMPLE"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/greenlime"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnTercero"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/greenlime"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnCuarto"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="DIFICIL"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/greenlime"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnQuinto"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NO DISPONIBLE"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/gray"
        android:textSize="18sp"
        android:clickable="false"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnSexto"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="NO DISPONIBLE"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/gray"
        android:textSize="18sp"
        android:clickable="false"
        android:textColor="@color/white"/>
</LinearLayout>
