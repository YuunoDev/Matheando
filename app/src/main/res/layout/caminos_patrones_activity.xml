<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="493dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/TextProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGuardarProgreso"
            android:layout_width="106dp"
            android:layout_height="96dp"
            android:backgroundTint="@color/greenlime"
            android:text="Guardar progreso"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Apartado de actividad -->
        <TextView
            android:id="@+id/txtPatronPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa el patrÃ³n: 2, 4, 6, __"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/etPatronRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escribe tu respuesta"/>

        <Button
            android:id="@+id/btnPatronContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:backgroundTint="@color/greenlime"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@color/greenlime">

        <Button
            android:id="@+id/btnSiguienteActividad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente Actividad"
            android:backgroundTint="@color/greenlime"/>
    </LinearLayout>
</LinearLayout>