<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/fondo1"
    android:id="@+id/main">

    <ImageView
        android:id="@+id/logoApp"
        android:layout_width="191dp"
        android:layout_height="208dp"
        android:src="@drawable/matheando_icon" />

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matheando"
        android:textSize="50sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <ImageButton
        android:id="@+id/btnComenzar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="10dp"
        app:srcCompat="@drawable/boton"/>

    <TextView
        android:id="@+id/textCreditos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Aplicación creada por:"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/textCreditosDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adrian Alonso Arambula - José Luis Ornelas Valadez"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2024 Todos los derechos reservados"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"/>
</LinearLayout>