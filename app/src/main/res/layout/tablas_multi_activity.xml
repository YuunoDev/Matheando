<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="493dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/TextProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGuardarProgreso"
            android:layout_width="106dp"
            android:layout_height="96dp"
            android:backgroundTint="@color/greenlime"
            android:text="Guardar progreso"
            android:textSize="14dp" />
    </LinearLayout>

    <!-- Apartado de actividad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtMultiplicacionPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cuánto es 3 x 4?"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Contenedor para los botones de los globos -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnGlobo1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/globo"
                android:text="10"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnGlobo2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/globo"
                android:text="12"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnGlobo3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/globo"
                android:text="14"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnGlobo4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/globo"
                android:text="16"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="18sp"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@color/greenlime">
    </LinearLayout>
</LinearLayout>