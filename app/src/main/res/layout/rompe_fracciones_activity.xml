<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/rompe_fracc_activity"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="493dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/TextProgreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGuardarProgreso"
            android:layout_width="106dp"
            android:layout_height="96dp"
            android:backgroundTint="@color/greenlime"
            android:text="Guardar progreso"
            android:textSize="14dp" />
    </LinearLayout>

    <!-- Apartado de actividad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgFraccionFigura"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/pizza"
            android:contentDescription="Figura de fracción"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/txtFraccionPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué fracción representa?"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <RadioGroup
            android:id="@+id/rgFraccionRespuestas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbFraccion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/2"/>

            <RadioButton
                android:id="@+id/rbFraccion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/4"/>

            <RadioButton
                android:id="@+id/rbFraccion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/4"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnFraccionContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/greenlime"
            android:text="Continuar"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@color/greenlime">
    </LinearLayout>
</LinearLayout>